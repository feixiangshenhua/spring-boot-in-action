<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>####%d{yyyy-M-d HH:mm:ss.SSS} %t %p %m%n</pattern>
        </encoder>
    </appender>

    <!-- application log -->
    <appender name="EVENT-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${OAUTH2_LOG_PATH}/serverlog/event_log_%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>10</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] [%X{USER-ID}] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="EVENT-LOG"/>
    </root>

    <logger name="com.nari" additivity="false" level="DEBUG">
        <appender-ref ref="EVENT-LOG"/>
    </logger>

    <logger name="com.nari.guangzhou.OAUTH2.logging.LoggingFilter" additivity="false" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.springframework" additivity="false" level="info">
    </logger>

    <logger name="net.sf.ehcache" additivity="false" level="error">
    </logger>

    <logger name="com.zaxxer.hikari" additivity="false" level="debug">
    </logger>

    <logger name="com.github.dozermapper" additivity="false" level="INFO">
    </logger>

    <logger name="org.thymeleaf" additivity="false" level="INFO">
    </logger>

    <!-- print the start log in nohup.out-->
    <logger name="com.nari.guangzhou.OAUTH2.OAUTH2ServerApplication" additivity="true" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.springframework.boot" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="io.undertow" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.zaxxer" additivity="false" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
